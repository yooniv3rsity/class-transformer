{
  "name": "@yoolabs/class-transformer",
  "version": "1.0.0rc2",
  "description": "Rewritten and improved fork of class-transformer",
  "author": "TypeStack contributors, Jannik Mewes (YOOniversity)",
  "license": "MIT",
  "readmeFilename": "README.md",
  "sideEffects": false,
  "main": "./cjs/index.js",
  "module": "./esm5/index.js",
  "es2015": "./esm2015/index.js",
  "typings": "./types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/yoolabs/class-transformer.git"
  },
  "tags": [
    "serialization",
    "deserialization",
    "serializer",
    "typescript",
    "object-to-class",
    "typescript-serializer"
  ],
  "scripts": {
    "build": "npm run build:cjs",
    "build:clean": "rimraf build",
    "build:es2015": "tsc --project tsconfig.prod.esm2015.json",
    "build:esm5": "tsc --project tsconfig.prod.esm5.json",
    "build:cjs": "tsc --project tsconfig.prod.cjs.json",
    "build:umd": "rollup --config rollup.config.js",
    "build:types": "tsc --project tsconfig.prod.types.json",
    "build:all": "npm run build:clean && npm run build:cjs && npm run build:esm5 && npm run build:es2015 && npm run build:umd && npm run build:types",
    "lint:fix": "eslint --max-warnings 0 --fix --ext .ts src/",
    "lint:check": "eslint --max-warnings 0 --ext .ts src/",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand --no-cache --coverage --verbose"
  },
  "husky": {},
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.9",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-plugin-jest": "^25.2.4",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^12.1.2",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rollup": "^2.60.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^26.5.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  }
}
